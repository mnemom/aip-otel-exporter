{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "10.0.0"
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1.0.0"
    },
    {
      "type": "panel",
      "id": "timeseries",
      "name": "Time series",
      "version": ""
    },
    {
      "type": "panel",
      "id": "table",
      "name": "Table",
      "version": ""
    },
    {
      "type": "panel",
      "id": "stat",
      "name": "Stat",
      "version": ""
    },
    {
      "type": "panel",
      "id": "barchart",
      "name": "Bar chart",
      "version": ""
    }
  ],
  "id": null,
  "uid": "aip-otel-detail",
  "title": "AIP Integrity Detail (Per Agent)",
  "description": "Per-agent deep-dive dashboard for AIP integrity checks. Select an agent_id to view detailed integrity data.",
  "tags": ["aip", "integrity", "otel", "detail"],
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "refresh": "30s",
  "schemaVersion": 39,
  "version": 1,
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "agent_id",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(aip_integrity_checks_total, agent_id)",
        "refresh": 2,
        "includeAll": false,
        "current": {},
        "multi": false,
        "sort": 1
      }
    ]
  },
  "panels": [
    {
      "title": "Summary",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false,
      "panels": []
    },
    {
      "title": "Total Checks",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "blue", "value": null }]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "sum(increase(aip_integrity_checks_total{agent_id=\"$agent_id\"}[$__range]))",
          "legendFormat": "Total",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Clear Verdicts",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "sum(increase(aip_integrity_checks_total{agent_id=\"$agent_id\", verdict=\"clear\"}[$__range]))",
          "legendFormat": "Clear",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Review Needed",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "yellow", "value": null }]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "sum(increase(aip_integrity_checks_total{agent_id=\"$agent_id\", verdict=\"review_needed\"}[$__range]))",
          "legendFormat": "Review needed",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Boundary Violations",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "red", "value": null }]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "sum(increase(aip_integrity_checks_total{agent_id=\"$agent_id\", verdict=\"boundary_violation\"}[$__range]))",
          "legendFormat": "Boundary violations",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Integrity Ratio Timeline",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 5 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 0.7 },
              { "color": "yellow", "value": 0.85 },
              { "color": "green", "value": 0.95 }
            ]
          },
          "custom": {
            "axisBorderShow": false,
            "axisCenteredZero": false,
            "axisLabel": "Integrity ratio",
            "drawStyle": "line",
            "fillOpacity": 15,
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false,
            "thresholdsStyle": { "mode": "area" }
          },
          "min": 0,
          "max": 1,
          "unit": "percentunit"
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(aip_window_integrity_ratio_bucket{agent_id=\"$agent_id\"}[5m])) by (le))",
          "legendFormat": "p50 integrity ratio",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.05, sum(rate(aip_window_integrity_ratio_bucket{agent_id=\"$agent_id\"}[5m])) by (le))",
          "legendFormat": "p5 integrity ratio",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Concerns",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 13 },
      "collapsed": false,
      "panels": []
    },
    {
      "title": "Concern Categories Over Time",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 14 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisBorderShow": false,
            "axisCenteredZero": false,
            "axisLabel": "Concerns",
            "drawStyle": "bars",
            "fillOpacity": 80,
            "lineWidth": 1,
            "stacking": { "group": "A", "mode": "normal" }
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "right", "calcs": ["sum"] },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "expr": "sum by (category) (increase(aip_concerns_total{agent_id=\"$agent_id\"}[5m]))",
          "legendFormat": "{{category}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "History",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 22 },
      "collapsed": false,
      "panels": []
    },
    {
      "title": "Verdict History",
      "description": "Recent integrity check verdicts for the selected agent. Shows verdict, concern count, integrity ratio, and analysis duration.",
      "type": "table",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 23 },
      "fieldConfig": {
        "defaults": {},
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "verdict" },
            "properties": [
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "color-text"
                }
              },
              {
                "id": "mappings",
                "value": [
                  { "type": "value", "options": { "clear": { "color": "green", "text": "Clear" } } },
                  { "type": "value", "options": { "review_needed": { "color": "yellow", "text": "Review Needed" } } },
                  { "type": "value", "options": { "boundary_violation": { "color": "red", "text": "Boundary Violation" } } }
                ]
              }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "Time" }],
        "footer": { "show": false }
      },
      "targets": [
        {
          "expr": "increase(aip_integrity_checks_total{agent_id=\"$agent_id\"}[1m])",
          "legendFormat": "{{verdict}}",
          "refId": "A",
          "format": "table",
          "instant": false
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": { "__name__": true, "job": true, "instance": true },
            "renameByName": { "Time": "Time", "verdict": "Verdict", "Value": "Count" }
          }
        }
      ]
    },
    {
      "title": "Top Concerns",
      "description": "Most frequent concern categories for the selected agent over the current time range.",
      "type": "barchart",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 23 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisBorderShow": false,
            "axisCenteredZero": false,
            "fillOpacity": 80,
            "gradientMode": "none",
            "lineWidth": 1
          }
        },
        "overrides": []
      },
      "options": {
        "barWidth": 0.7,
        "groupWidth": 0.7,
        "legend": { "displayMode": "list", "placement": "bottom" },
        "orientation": "horizontal",
        "tooltip": { "mode": "single" },
        "xTickLabelRotation": 0,
        "stacking": "none"
      },
      "targets": [
        {
          "expr": "topk(10, sum by (category) (increase(aip_concerns_total{agent_id=\"$agent_id\"}[$__range])))",
          "legendFormat": "{{category}}",
          "refId": "A",
          "instant": true
        }
      ]
    }
  ]
}
